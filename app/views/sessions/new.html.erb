<div class="col-md-6 offset-md-1">
    <div class="row">
        <div class="col-md-6 offset-md-6">
            <h1 style="text-align:center;">Login</h1>
        </div>
    </div>
    <br/>
    <div class="row">
        <div class="col-md-6 offset-md-6">
            <%= form_tag '/login' do %>
                Email: <%= text_field_tag :email %>
                Password: <%= password_field_tag :password %>
                <%= submit_tag "Submit", class:"btn btn-success" %>
            <% end %>
        </div>
    </div>
</div>
