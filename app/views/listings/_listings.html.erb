<span id="available-listings">
    <div class="row">
        <div class="col-md-12">
            <h3>Available Listings</h3>
        </div>
    </div>
    <br/>
    <div id="available-listings">
        <div class="row">
            <div class="col-md-3"><strong>Provider name</strong></div>
            <div class="col-md-4"><strong>Start Date</strong></div>
            <div class="col-md-4"><strong>End Date</strong></div>
            <div class="col-md-1"></div>
        </div>
        <hr/>
        <% @available_listings.each do |listing|  %>
            <div class="row">
                <div class="col-md-2"><span class="align-middle"><%=listing.provider.name%></span></div>
                <div class="col-md-4"><span class="align-middle"><%=listing.start_at_label %></span></div>
                <div class="col-md-4"><span class="align-middle"><%=listing.end_at_label %></span></div>
                <div class="col-md-2"><%= button_to 'Book', book_listing_path(listing), disabled: is_double_booked?(listing), method: :post, remote: true, class:"btn btn-success" %></div>
            </div>
            <hr/>
        <% end %>
    </div>
</span>
