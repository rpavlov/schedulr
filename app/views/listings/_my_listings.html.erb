<span id="my-listings">
    <div class="row">
        <div class="col-md-12">
            <h3>My Booked Listings</h3>
        </div>
    </div>
    <br/>
    <div id="listings_partial">
        <div class="row">
            <div class="col-md-3"><strong>Provider name</strong></div>
            <div class="col-md-4"><strong>Start Date</strong></div>
            <div class="col-md-4"><strong>End Date</strong></div>
            <div class="col-md-1"></div>
        </div>
        <hr/>
        <% @booked_listings.each do |listing|  %>
            <div class="row">
                <div class="col-md-3"><%=listing.provider.name%></div>
                <div class="col-md-4"><%=listing.start_at_label %></div>
                <div class="col-md-4"><%=listing.end_at_label %></div>
                <div class="col-md-1"><%= link_to 'X', cancel_listing_path(listing), method: :post, remote: true, data: { confirm: 'Are you sure you want to cancel this booking?' }, class:"btn btn-danger" %></div>
            </div>
        <% end %>
    </div>
</span>
